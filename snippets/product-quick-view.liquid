<style>
.quick-view-modal {
  position: fixed; top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex; justify-content: center; align-items: center;
  z-index: 9999;
}

.quick-view-content {
  background: white;
  padding: 20px;
  width: 400px;
  max-width: 90%;
  position: relative;
}

.close-quick-view {
  position: absolute; top: 10px; right: 10px;
  font-size: 24px; border: none; background: none;
}

.quick-view-add-btn {
  margin-top: 20px;
  width: 100%;
  background: black; color: white;
  padding: 12px; border: none; cursor: pointer;
  font-weight: bold;
}

.option-group {
  margin-top: 15px;
}

.option-group label {
  display: block;
  font-weight: bold;
  margin-bottom: 5px;
}

.option-group select {
  width: 100%;
  padding: 8px;
}

</style>

<div id="QuickViewModal" class="quick-view-modal" style="display:none;">
  <div class="quick-view-content">
    <button class="close-quick-view">×</button>
    
    <img id="QuickViewImage" src="" alt="Product image" style="width:100%; height:auto;">
    <h2 id="QuickViewTitle"></h2>
    <p id="QuickViewPrice"></p>
    <p id="QuickViewDescription"></p>

    <form id="QuickViewForm">
      <div id="QuickViewOptionsContainer"></div>

      <input type="hidden" name="id" id="QuickViewVariantId" required>

      <button type="submit" class="quick-view-add-btn">ADD TO CART →</button>
      <p id="QuickViewSuccess" style="display:none; color:green; margin-top:10px;">✔ Added to cart!</p>
    </form>
  </div>
</div>
